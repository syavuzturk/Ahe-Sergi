
@{
    ViewBag.Title = "sifreGuncelle";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

    <section class="widget">
        <header>
            <span class="icon">&#128200;</span>
            <hgroup>
                <h1>Yeni Kategori Ekle</h1>
            </hgroup>
        </header>
        <div class="content">
            <form method="post" action="/Admin/sifreGuncelle" enctype="multipart/form-data">
                <div class="field-wrap">
                    <label>Eski Şifre</label>
                    @Html.Password("EskiSifre",null,new {required = "required", pattern=".{5,}", title="Şifre en az 5 karakter uzunluğunda olmalı"})
                </div>
                <div class="field-wrap">
                    <label>Yeni Şifre</label>
                    @Html.Password("Sifre",null,new {required = "required", pattern=".{5,}", title="Şifre en az 5 karakter uzunluğunda olmalı"})
                </div>
                <div class="field-wrap">
                    <label>Yeni Şifre Tekrar</label>
                    @Html.Password("YeniSifre",null,new {required = "required", pattern=".{5,}", title="Şifre en az 5 karakter uzunluğunda olmalı"})
                </div>
                <button type="submit" class="green">Güncelle</button>
            </form>
        </div>
    </section>

